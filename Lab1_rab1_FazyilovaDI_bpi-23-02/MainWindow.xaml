<Window x:Class="Lab1_rab1_FazyilovaDI_bpi_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_rab1_FazyilovaDI_bpi_23_02"
        mc:Ignorable="d"
        Title="4 целых числа" Height="250" Width="400" MinHeight="150" MinWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="a" Grid.Row="0" Grid.Column="0" />
        <TextBox x:Name="aTextBox" Grid.Row="0" Grid.Column="1" Width="200"  PreviewTextInput="textBox_PreviewTextInput" PreviewKeyDown="textBox_PreviewKeyDown"/>
        <Label Content="b" Grid.Row="1" Grid.Column="0" />
        <TextBox x:Name="bTextBox" Grid.Row="1" Grid.Column="1" Width="200" PreviewTextInput="textBox_PreviewTextInput" PreviewKeyDown="textBox_PreviewKeyDown"/>
        <Label Content="c" Grid.Row="2" Grid.Column="0" />
        <TextBox x:Name="cTextBox" Grid.Row="2" Grid.Column="1" Width="200" PreviewTextInput="textBox_PreviewTextInput" PreviewKeyDown="textBox_PreviewKeyDown"/>
        <Label Content="d" Grid.Row="3" Grid.Column="0" />
        <TextBox x:Name="dTextBox" Grid.Row="3" Grid.Column="1" Width="200" PreviewTextInput="textBox_PreviewTextInput" PreviewKeyDown="textBox_PreviewKeyDown"/>
        <Button Content="среднее арифметическое" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan=" 2" Click="arithmeticMean_Click" Width="200" />
        <Button Content="максимальное число" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan=" 2" Click="maxNumber_Click" Width="200" />
        <Label Content="среднее арифметическое" Grid.Row="6" Grid.Column="0"  />
        <TextBox x:Name="meanTextBox" Grid.Row="6" Grid.Column="1" Width="200" IsEnabled="False" />
        <Label Content="максимальное число" Grid.Row="7" Grid.Column="0"  />
        <TextBox x:Name="maxTextBox" Grid.Row="7" Grid.Column="1" Width="200" IsEnabled="False" />
    </Grid>
</Window>
